{
    "meta": {
        "version": "PTDL_v1"
    },
    "exported_at": "2020-03-20T07:16:46-05:00",
    "name": "Cuberite-creative",
    "author": "tooangel@tooangel.de",
    "description": "Cuberite in creative mode",
    "image": "quay.io\/parkervcp\/pterodactyl-images:base_debian",
    "startup": ".\/Cuberite",
    "config": {
        "files": "{\r\n    \"webadmin.ini\": {\r\n        \"parser\": \"ini\",\r\n        \"find\": {\r\n            \"User:admin.Password\": \"{{server.build.env.ADMIN_PASS}}\",\r\n            \"WebAdmin.Ports\": \"{{server.build.env.WEB_PORT}}\"\r\n        }\r\n    }\r\n}",
        "startup": "{\r\n    \"done\": \"Startup complete\"\r\n}",
        "logs": "{}",
        "stop": "stop"
    },
    "scripts": {
        "installation": {
            "script": "#!\/bin\/bash\r\n\r\napt update\r\napt install -y git\r\n\r\ncd \/mnt\/server\r\n\r\nrm -rf server-egg\r\ngit clone --recursive https:\/\/github.com\/equitas-mc\/server-creative-egg.git server-egg\r\n./server-egg/setup.sh",
            "container": "debian:buster-slim",
            "entrypoint": "bash"
        }
    },
    "variables": [
        {
            "name": "Server Description",
            "description": "Server Description",
            "env_variable": "SERV_DESC",
            "default_value": "Cuberite on Pterodactyl!",
            "user_viewable": 1,
            "user_editable": 1,
            "rules": "nullable|string"
        },
        {
            "name": "Admin Password",
            "description": "The password for the webadmin panel 'admin' user",
            "env_variable": "ADMIN_PASS",
            "default_value": "ChangeMe",
            "user_viewable": 1,
            "user_editable": 1,
            "rules": "nullable|string"
        },
        {
            "name": "WebAdmin Port",
            "description": "Port for the cuberite webadmin panel.",
            "env_variable": "WEB_PORT",
            "default_value": "26602",
            "user_viewable": 1,
            "user_editable": 1,
            "rules": "required|integer|between:1,65535"
        }
    ]
}
